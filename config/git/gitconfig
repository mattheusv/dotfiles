[user]
	name = Matheus Alcantara
	email = matheusssilv97@gmail.com

[includeIf "gitdir:~/dev/work/**"]
    path = ~/dev/work/.gitconfig

[push]
	default = current

[pull]
	default = current
	rebase = true

[alias]
	st = number -s
	sst = status
	aa = add .
	au = add -u
    amend = !git add -u && git commit --amend
    a = number add
    rs = number restore
	cm = commit
	cmm = commit -m
	cma = commit -am
    si = switch
	ck = number checkout
	cka = checkout .
	cko = checkout origin
    df = number diff
	ps = push
	pso = push origin
	pl = pull
	plo = pull origin
	r = remote -v
	b = branch
	l = log --pretty=oneline -n 20
    sh = stash

[core]
    editor = 'nvim'
    pager = 'delta'

[interactive]
    diffFilter = delta --color-only

[commit]
	template = /home/matheus/.gitmessage

[delta]
    features = line-numbers decorations

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
