; vim:ft=dosini

[colors]
background = #222
foreground = #dfdfdf
foreground-alt = #888
red = #f90000
green = 009C10
yellow = FFEF00

[bar/main]
monitor = ${env:MONITOR:HDMI1}
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 0
bottom = true
line-size = 2
padding = 1
module-margin = 1
font-0 = "Hack Nerd Font:size=8:weight=Bold"
tray-position = right
tray-padding = 2
tray-maxsize = 15
modules-left = date i3 xwindow
modules-center = 
modules-right = cpu memory wlan vpn battery

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
pin-workspaces = false
enable-scroll = false
label-focused = " %icon% "
label-focused-underline = #fba922
label-unfocused = " %icon% "
label-visible = " %icon% "
ws-icon-0 = 1 ;I
ws-icon-1 = 2 ;II
ws-icon-2 = 3 ;III
ws-icon-3 = 4 ;IV
ws-icon-4 = 5 ;V
ws-icon-5 = 6 ;VI
ws-icon-6 = 7 ;VII
ws-icon-7 = 8 ;VIII
ws-icon-8 = 9 ;IX
ws-icon-9 = 10 ;X

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d %H:%M:%S
date-alt = %A, %d %B %Y %H:%M:%S

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 3
label = %gb_used%/%gb_total%
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}

[module/wlan]
type = internal/network
interface = wlp2s0
label-connected = %essid%
format-connected = <label-connected>
format-connected-underline = ${colors.red}
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/battery]
type = internal/battery

format-charging = <label-charging> <animation-charging>
label-charging = %percentage%%
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

format-discharging = <label-discharging> <ramp-capacity>
label-discharging = "%percentage% "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/vpn]
type = custom/script
exec = echo "vpn"
exec-if = nmcli c show --active | grep -q vpn
label = VPN
